

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .60}
        scale : 0.5
    Label:
        font_size: dp(30)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.difficulty_label
        pos_hint: {"center_x": .5, "center_y": .30}
    Button:
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_easy
        pos_hint: {"center_x": .3, "center_y": .15}
        size_hint: .1, .1
        on_press: root.parent.on_menu_button_pressed("easy")
        # pour suprimer la couleur par default du button
        background_normal: ''
        background_color: 1, .3, .4, .95
    Button:
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_normal
        pos_hint: {"center_x": .5, "center_y": .15}
        size_hint: .1, .1
        on_press: root.parent.on_menu_button_pressed("normal")
        # pour suprimer la couleur par default du button
        background_normal: ''
        background_color: 1, .3, .4, .95
    Button:
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_hard
        pos_hint: {"center_x": .7, "center_y": .15}
        size_hint: .1, .1
        on_press: root.parent.on_menu_button_pressed("hard")
        # pour suprimer la couleur par default du button
        background_normal: ''
        background_color: 1, .3, .4, .95